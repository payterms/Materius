<resources>

    <style name="AppThemeCustom" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/backGroundColor</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="AppThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorBlack1</item>
        <item name="android:textAppearance">@color/colorAccentRed</item>
    </style>

    <style name="AppThemeYellow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkYellow</item>
        <item name="colorAccent">@color/colorAccentYellow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@color/colorAccentYellow</item>
        <item name="android:colorBackground">@color/colorBlack2</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@color/colorAccentGreen</item>
        <item name="android:colorBackground">@color/colorBlack3</item>
    </style>

    <style name="AppThemeCustom.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryDarkColor</item>

    </style>

    <style name="AppThemeCustom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="AppThemeCustom.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryColor</item>

    </style>
</resources>
