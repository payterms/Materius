<resources>
     <style name="AppThemePink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/secondaryColor</item>
         <item name="android:colorBackground">@color/backGroundColor</item>
    </style>

    <style name="AppThemePink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryDarkColor</item>

    </style>

    <style name="AppThemePAM.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="AppThemePAM.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/primaryColor</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryColor</item>

    </style>


</resources>
